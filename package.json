{
  "name": "vscode-ask-human-mcp",
  "displayName": "VS Code Ask Human MCP Server",
  "description": "Enable AI Agents to ask questions to developers through VS Code",
  "version": "1.4.0",
  "publisher": "to-omer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/to-omer/ask-human-vscode.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "MCP"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "askHumanVscode.toggleMCPServer",
        "title": "Toggle MCP Server"
      },
      {
        "command": "askHumanVscode.showPanel",
        "title": "Show Panel",
        "category": "Ask Human"
      },
      {
        "command": "askHumanVscode.selectQuestion",
        "title": "Select Question",
        "category": "Ask Human",
        "icon": "$(question)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "askHumanVscode",
          "title": "Ask Human",
          "icon": "resources/icon-light.svg"
        }
      ]
    },
    "views": {
      "askHumanVscode": [
        {
          "id": "askHumanVscode.extensionView",
          "name": "Questions",
          "type": "webview",
          "icon": "resources/icon-light.svg",
          "when": "config.askHumanVscode.webviewPosition == 'extension'"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "askHumanVscode.selectQuestion",
          "when": "config.askHumanVscode.webviewPosition == 'editor' && askHumanVscode.hasQuestions",
          "group": "navigation",
          "title": "Select Question",
          "icon": "$(question)"
        }
      ],
      "view/title": [
        {
          "command": "askHumanVscode.selectQuestion",
          "when": "view == 'askHumanVscode.extensionView' && askHumanVscode.hasQuestions",
          "group": "navigation",
          "title": "Select Question",
          "icon": "$(question)"
        }
      ]
    },
    "configuration": {
      "title": "Ask Human VS Code",
      "properties": {
        "askHumanVscode.port": {
          "type": "number",
          "default": 11911,
          "description": "Port number for the MCP server",
          "minimum": 1024,
          "maximum": 65535
        },
        "askHumanVscode.toolDescription": {
          "type": "string",
          "default": "Ask the developer when human judgment or context is needed for decision-making",
          "description": "Description text for the ask-human tool (when and who to ask)",
          "examples": [
            "Ask the developer when human judgment or decision-making is needed",
            "Ask the human developer when code analysis alone is insufficient",
            "Ask the developer for clarification on requirements or design decisions"
          ]
        },
        "askHumanVscode.questionDescription": {
          "type": "string",
          "default": "Question with relevant context, current situation, and specific guidance needed",
          "description": "Description text for the question parameter (what to include in questions)",
          "examples": [
            "Question with context, current situation, and specific help needed",
            "Question including relevant code, attempted approaches, and expected outcome",
            "Question with background information, options considered, and decision criteria"
          ]
        },
        "askHumanVscode.webviewPosition": {
          "type": "string",
          "enum": [
            "extension",
            "editor"
          ],
          "default": "editor",
          "description": "Select position to display Ask Human WebView"
        },
        "askHumanVscode.notification": {
          "type": "object",
          "default": {
            "enabled": true
          },
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable notification sound when question arrives"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@vscode/codicons": "^0.0.36",
    "express": "^5.1.0",
    "marked": "^16.0.0",
    "play-sound": "^1.1.6",
    "prismjs": "^1.30.0",
    "sanitize-html": "^2.17.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/play-sound": "^1.1.2",
    "@types/sanitize-html": "^2.16.0",
    "@types/trusted-types": "^2.0.7",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
